        <activity android:name="com.ics.nrs.UserLoginActivity" />
        <activity android:name="com.ics.nrs.OtpActivity" />
        <activity android:name="com.ics.nrs.ForgetPasswordActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.ics.nrs.VerificationActivity"
