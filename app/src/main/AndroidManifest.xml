            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme" />
        <activity android:name="com.ics.nrs.Feedback" />
        <activity android:name="com.ics.nrs.ComplaintList" />
        <activity android:name="com.ics.nrs.StaffProfile" />
        <activity android:name="com.ics.nrs.ProductRo" />
        <activity android:name="com.ics.nrs.SpareProduct" />
